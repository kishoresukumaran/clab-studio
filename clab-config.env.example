# ============================================
# Containerlab Studio - Central Configuration
# ============================================
# Copy this file to clab-config.env and update values:
#   cp clab-config.env.example clab-config.env
#   nano clab-config.env
# Then run: sudo ./setup.sh
# ============================================

# Server IP Address (REQUIRED - set to your server's IP)
SERVER_IP=CHANGE_ME

# API Ports (usually don't need to change)
AUTH_API_PORT=3000
BACKEND_API_PORT=3001
CONTAINERLAB_API_PORT=8080
FRONTEND_PORT=80

# Server List for multi-server deployments
# Format: name1:ip1,name2:ip2
# Example: ul-clab-1:10.83.12.237,ul-clab-2:10.83.12.238
CLAB_SERVERS=ul-clab-1:CHANGE_ME

# SSH Credentials (for backend operations)
SSH_USERNAME=student
SSH_PASSWORD=CHANGE_ME

# Topology Storage Path
TOPOLOGY_PATH=/home/clab_nfs_share/containerlab_topologies

# MongoDB Connection (leave empty to use the bundled Docker MongoDB container)
# Only set this if you want to connect to an external MongoDB instance
MONGODB_URI=

# Default Lab Admin Credentials
LAB_ADMIN_USER=labadmin
LAB_ADMIN_PASSWORD=CHANGE_ME
